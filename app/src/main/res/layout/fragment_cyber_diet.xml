<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/doctor_cyber_primary"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cyber Diet"
            android:textColor="@color/doctor_cyber_highlight"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customized Cyber Strength. Tailored security strategies and digital wellness programs designed for your specific environment and needs."
            android:textColor="@color/doctor_cyber_light"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personalized Approach:"
            android:textColor="@color/doctor_cyber_highlight"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Personalized Cyber Architecture – Defense systems designed for your environment\n• Continuous Evolution – Strategies updated in real time to counter threats\n• Customized Planning – Designing Your Defense\n• Ongoing Optimization – Securing Your Future"
            android:textColor="@color/doctor_cyber_light"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</ScrollView>
