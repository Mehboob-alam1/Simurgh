<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/doctor_cyber_primary"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cyber Today"
            android:textColor="@color/doctor_cyber_highlight"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proactive Defense. Stay ahead of threats with predictive AI technology and real-time security updates for today's digital landscape."
            android:textColor="@color/doctor_cyber_light"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Protection:"
            android:textColor="@color/doctor_cyber_highlight"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Real-time Threat Monitoring\n• AI-Powered Security Analytics\n• Instant Threat Response\n• Current Security Trends Analysis\n• Live Security Updates\n• Immediate Risk Assessment"
            android:textColor="@color/doctor_cyber_light"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</ScrollView>
