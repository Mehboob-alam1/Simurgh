<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/doctor_cyber_primary"
    android:fillViewport="true"
    tools:context=".ContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Top small header -->
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_edit_square_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins"
                android:text="Get In Touch"
                android:textColor="@color/doctor_cyber_highlight"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Hero image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/slider3"
            android:id="@+id/imgNewsContact"
            />

        <!-- Intro / Connect content -->
        <TextView
            android:id="@+id/txtIntroConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/doctor_cyber_light"
            android:textSize="15sp"
            android:lineSpacingMultiplier="1.3"
            android:text="Ready to Take the Next Step?\nConnect with Doctor Cyber\n\nAt Doctor Cyber, we believe cybersecurity begins with connection — to people, to tools, and to shared responsibility. Whether you’re seeking support, interested in partnership, exploring one of our solutions, or simply want to stay informed, we’re here to engage.\n\nFrom individuals and families to schools, businesses, and public institutions, we serve everyone who believes in building a safer digital world — and we’re always looking to connect with those who share that mission.\n\nAs part of that commitment, we welcome you to become a Cyber Fan — a proud member of our growing community of digital defenders, early adopters, and cyber-conscious citizens. Cyber Fans receive exclusive updates, early access to features, and invitations to events that champion awareness and resilience. If you believe in making cyber hygiene a movement, not just a message — you’re already one of us.\n\nLet’s work together to protect what matters." />

        <!-- Callout: Become a Cyber Fan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/edit_text_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Become a Cyber Fan"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/doctor_cyber_highlight"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/doctor_cyber_light"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.25"
                android:text="Join our community to receive exclusive updates, early access to features, and invitations to events that champion awareness and resilience." />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#8066AE" />

        <!-- Contact info (address + email) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/outline_public_24"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="United States"
                    android:textColor="@color/doctor_cyber_highlight"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/outline_add_location_24"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppins"
                    android:text="3639 Haven Ave., Menlo Park, CA 94025"
                    android:textColor="@color/doctor_cyber_light"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/baseline_email_24"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txtSupportEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:autoLink="email"
                    android:fontFamily="@font/poppins"
                    android:text="help@doctorcyber.com"
                    android:textColor="@color/doctor_cyber_light"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Form fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <!-- Full name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_back"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/white"
                    android:src="@drawable/baseline_person_24" />

                <EditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:hint="Your full name"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_back"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/white"
                    android:src="@drawable/baseline_email_24" />

                <EditText
                    android:id="@+id/etEmailContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:hint="Email address"
                    android:singleLine="true"

                    android:textColor="@color/white"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_back"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/white"
                    android:src="@drawable/baseline_local_phone_24" />

                <EditText
                    android:id="@+id/etPhoneNumberContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:hint="Phone Number"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Company -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_back"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/white"
                    android:src="@drawable/baseline_person_24" />

                <EditText
                    android:id="@+id/etCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:hint="Company Name"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Subject -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_back"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/white"
                    android:src="@drawable/baseline_info_24" />

                <EditText
                    android:id="@+id/etYourSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:hint="Your Subject"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Message -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_back"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/white"
                    android:src="@drawable/baseline_edit_square_24" />

                <EditText
                    android:id="@+id/etMessage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:hint="Write your message"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:textColor="@color/white"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:maxLines="10" />
            </LinearLayout>

            <!-- Send button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Send a Message"
                android:id="@+id/btnSendMessage"
                android:layout_marginTop="16dp"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
